@model FullProfileViewModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Full Profile";
}
<div class="row">
    @*<div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">

        </div>*@
    <div class="col-xl-12 order-xl-1">
        <div class="card card-profile shadow ct-example">
            <!--Header de la carta-->
            <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Informacion Basica</h3>
                    </div>
                    <div class="col-4 text-right">
                        <a href="#!" class="btn btn-sm btn-primary">Modificar</a>
                        <a href="#" class="btn btn-sm btn-info mr-4">Contactar</a>
                        <a href="#" class="btn btn-sm btn-default float-right">Dejar un Mensaje</a>
                    </div>
                </div>
            </div>
            <!--END Header de la carta-->
            <!--Foto de perfil-->
            <div class="row justify-content-center">
                <div class="col-lg-3 order-lg-2">
                    <div class="card-profile-image">
                        <a href="#">
                            <img src="~/img/theme/camarero.png" class="rounded-circle">
                        </a>
                    </div>
                </div>
            </div>
            <!--END foto de perfil-->
            <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                <div class="d-flex justify-content-between">
                    <div class="col-4 text-right">
                        <input type="file" class="btn btn-sm btn-default float-right" />
                    </div>
                </div>
            </div>
            <div class="card-body pt-0 pt-md-4">
                <form method="post" asp-action="FullProfile" asp-controller="Home">
                    @if (!string.IsNullOrWhiteSpace(TempData["StatusMessage"] as string))
                    {

                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["StatusMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    }
                    <textarea asp-for="Profile.Objetiv" class="form-control" id="" rows="3" placeholder="Descripcion Brebe de metas y objetivos"></textarea>
                    <hr class="my-4" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Tu ID</label>
                                <input asp-for="Profile.ApplicationUserId" type="text" class="form-control" readonly/>
                                <input asp-for="Profile.Id" type="text" hidden>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nombres</label>
                                <input asp-for="Profile.Name"
                                       type="text" placeholder="Nombres" class="form-control" />
                                <span asp-validation-for="Profile.Name" class="invalid-feedback" style="display: block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Apellidos</label>
                                <input asp-for="Profile.LastName" class="form-control"
                                       type="text" placeholder="Apellido" />
                                <span asp-validation-for="Profile.LastName" class="invalid-feedback" style="display: block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Fecha de Nacimiento</label>
                                <div class="input-group input-group-alternative">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="ni ni-calendar-grid-58"></i></span>
                                    </div>
                                    <input asp-for="Profile.DateOfBirth"
                                           class="form-control datepicker" placeholder="Select date" type="text">
                                    <span asp-validation-for="Profile.DateOfBirth" class="invalid-feedback" style="display: block"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Genero</label>
                                <select class="form-control" asp-for="Profile.GenderId" asp-items="ViewBag.Genero">
                                    <option value="">Seleccione</option>
                                </select>
                                <span asp-validation-for="Profile.GenderId" class="invalid-feedback" style="display: block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nacionalidad</label>
                                <select class="form-control" asp-for="Profile.NationalityId" asp-items="ViewBag.Nacionalidad">
                                    <option value="">Seleccione</option>
                                </select>
                                <span asp-validation-for="Profile.NationalityId" class="invalid-feedback" style="display: block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Estado Civil</label>
                                <select class="form-control" asp-for="Profile.MatiralStatusId" asp-items="ViewBag.EstadoCivil">
                                    <option value="">Seleccione</option>
                                </select>
                                <span asp-validation-for="Profile.MatiralStatusId" class="invalid-feedback" style="display: block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Maximo Nivel Educativo</label>
                                <select class="form-control" asp-for="Profile.EducativeTitleId" asp-items="ViewBag.NivelEducativo">
                                    <option value="">Seleccione</option>
                                </select>
                                <span asp-validation-for="Profile.EducativeTitleId" class="invalid-feedback" style="display: block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Telefono</label>
                                <input asp-for="Profile.ApplicationUser.PhoneNumber"
                                       type="tel" placeholder="Telefono" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Licencia de Conducir</label>
                                <select class="form-control" asp-items="ViewBag.Licencia">
                                    <option value="">Seleccione</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Posee Vehiculo</label>
                                <select class="form-control" asp-items="ViewBag.Vehiculo">
                                    <option value="">Seleccione</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Jefe de hogar?</label>
                                <select class="form-control" asp-items="ViewBag.CabezaHogar">
                                    <option value="">Seleccione</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Estatura</label>
                                <select class="form-control" asp-items="ViewBag.Estatura">
                                    <option value="">Seleccione</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button class="btn btn-success mt-4 mb-4" type="submit">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Perfil</h3>
                    </div>
                    <div class="col-4 text-right">
                        <a href="#!" class="btn btn-sm btn-primary">Modificar</a>
                    </div>
                </div>
            </div>
            <div class="card-body">

            </div>
        </div>
    </div>
</div>